<div class="col-md-3">
	<div class="thumbnail" style="box-shadow: 2px 3px 7px 0px rgba(0,0,0,0.5);">
		<%= link_to user_path(user.username) do %>
			<%= gravatar_tag user.email, size: 300 %>
		<% end %>
		<div class="caption">
			<h3><%= user.username %></h3>
			<p><%= friend_buttons(user) %></p>
		</div>
	</div>
</div>